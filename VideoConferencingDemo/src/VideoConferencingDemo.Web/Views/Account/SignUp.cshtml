@model SignUpModel
@{
    ViewData["Title"] = "SignUp";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/signin.css" />
}

<div class="container-fluid bg-signin">
    <div class="d-flex justify-content-center py-5">
        <div>
            <i class="text-white mx-2" data-feather="clock"></i>
        </div>
        <div>
            <h1 class="text-center text-white h5">WEBTRACKER</h1>
        </div>
    </div>
    <div class="row" style="height: 20vh">
        <div class="col-md-3 align-self-center"></div>
        <div class="col-md-6 align-self-center">
            <form role="form" id="registerForm" asp-antiforgery="true" asp-area="" asp-controller="Account"
                  asp-action="SignUp" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                  class="px-5 py-3 border border-1" style="background: #fff">
                <h1 class="text-center mb-5">Sign Up</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="required" for="floatingInput">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="required" for="floatingPassword">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="required" for="floatingPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="required" for="floatingFirstName">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="floatingFirstName" placeholder="First name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <div style="width: 75%; font-size: 0.8rem; color: lightgrey">
                        <p>
                            By clicking Sign Up, you agree to TopTracker's Terms of
                            Service and acknowledge our Privacy Policy and Cookie Policy.
                        </p>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-success primary-button px-3 py-3">
                            Sign Up
                        </button>
                    </div>
                </div>
            </form>
            <div class="d-flex justify-content-between">
                <div class="my-3">
                    <p class="login-text">WebTracker @@2022</p>
                </div>
                <div class="d-flex my-3">
                    <p class="mt-3 mx-3 login-text">Already have an account?</p>
                    <a class="btn btn-success secondary-button px-3 py-3 sign-up"
                       asp-area="" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl">
                        Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
