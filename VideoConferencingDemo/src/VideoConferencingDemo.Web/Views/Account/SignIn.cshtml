@model SignInModel
@{
    ViewData["Title"] = "SignIn";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/signin.css" />
}

<div class="container-fluid bg-signin">
    <div class="d-flex justify-content-center py-5">
        <div>
            <i class="text-white mx-2" data-feather="clock"></i>
        </div>
        <div>
            <h1 class="text-center text-white h4">Video Meeting Demo</h1>
        </div>
    </div>
    <div class="row" style="height: 20vh">
        <div class="col-md-3 align-self-center"></div>
        <div class="col-md-6 align-self-center">
            <form asp-antiforgery="true" asp-area="" asp-controller="Account" asp-action="SignIn"
                  asp-route-returnUrl="@Model.ReturnUrl" method="post" class="py-3 px-5 border border-1" style="background: #fff">
                <h1 class="text-center mb-5">Sign In</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="required" for="floatingInput">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="required" for="floatingPassword">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <a class="forget-link" href=""><p class="text-right">Forget your password?</p></a>
                <div class="d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-success primary-button px-3 py-3">
                        Sign In
                    </button>
                </div>
            </form>
            <div class="d-flex justify-content-between">
                <div class="mt-3">
                    <p class="login-text">Demo @@2022</p>
                </div>
                <div class="d-flex my-3">
                    <p class="mt-3 mx-3 login-text">New User?</p>
                    <a class="btn btn-success secondary-button px-3 py-3 sign-up"
                       asp-area="" asp-controller="Account" asp-action="SignUp" asp-route-returnUrl="@Model.ReturnUrl">
                        Sign Up
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 align-self-center"></div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('footer').style.display = "none";
    </script>
}
